<Page x:Class="praktika12.Pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="792"
      Title="Education">

    <Grid Background="#f8f9fa">
        <Grid Margin="0,0,0,349.6" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Submission of Applications;component/logo.png"/>
            <Label Content="Электронная приёмная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ScrollViewer Margin="0,60,0,0" VerticalContentAlignment="Top">
            <Grid Height="395">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Сведения об образовании" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="26" Width="165"/>
                <Label Content="База:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="26" Width="37"/>
                <Label Content="Выберите один из вариантв:" HorizontalAlignment="Left" Margin="20,67,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Height="23" Width="141"/>
                <CheckBox Content="9 классов" HorizontalAlignment="Left" Margin="22,91,0,0" VerticalAlignment="Top" Height="15" Width="73"/>
                <CheckBox Content="11 классов" HorizontalAlignment="Left" Margin="22,106,0,0" VerticalAlignment="Top" Height="15" Width="79"/>
                <CheckBox Content="СПО" HorizontalAlignment="Left" Margin="22,121,0,0" VerticalAlignment="Top" Height="15" Width="45"/>
                <CheckBox Content="ВПО" HorizontalAlignment="Left" Margin="22,136,0,0" VerticalAlignment="Top" Height="15" Width="44"/>
                <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Height="23" Width="147"/>
                <CheckBox Content="Аттестат" HorizontalAlignment="Left" Margin="22,185,0,0" VerticalAlignment="Top" Height="15" Width="65"/>
                <CheckBox Content="Диплом" HorizontalAlignment="Left" Margin="22,200,0,0" VerticalAlignment="Top" Height="15" Width="64"/>
                <Label Content="Серия и номер документа об образовании:" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Height="26" Width="250"/>
                <TextBox Height="24" Margin="12,245,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                <Label Content="Средний балл:" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Height="26" Width="90" Grid.Column="1"/>
                <TextBox Height="24" Margin="10,245,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="Прикрепите сканы страниц документа об образовании с Ф.И.О., наименованием образовательной организации и оценками"
                       HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" Height="26" Width="772" Grid.ColumnSpan="2"/>
                <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="20,300,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Height="23" Width="147"/>
                <TextBox Height="24" Margin="10,325,120,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Button Content="Выбрать ..." HorizontalAlignment="Right" Margin="10,325,10,0" VerticalAlignment="Top" Width="100" Height="25" Grid.Column="1"/>
                <Button Content="Продолжить" Click="next" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25" Grid.Column="1"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
