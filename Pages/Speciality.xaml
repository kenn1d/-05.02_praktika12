            </CheckBox.Content>
        </CheckBox>
        <CheckBox Content="С датой представления оригиналов документов ознакомлен(а)" HorizontalAlignment="Left" Margin="22,490,0,0" VerticalAlignment="Top" Height="58" Width="731" Grid.ColumnSpan="2"/>
